{
    "manifest_version": 3,
    "name": "Prompt Optimizer",
    "version": "1.0",
    "description": "Rewrites vague prompts into optimal queries",
    "permissions": ["storage", "activeTab", "scripting"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
    },
    "icons": {
      "128": "icon.png"
    }
  }
  